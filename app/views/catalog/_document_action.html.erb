<% unless document_action_config.key == :ris || document_action_config.key == :bulk_ris %>
  <%= link_to document_action_label(document_action_config.key, document_action_config),
              document_action_path(document_action_config, (local_assigns.key?(:url_opts) ? url_opts : {}).merge(({ id: document } if document) || {})),
              class: document_action_config.html_class,
              data: {}.merge(({ blacklight_modal: 'trigger' } if document_action_config.modal != false) || {}) %>
<% end %>
